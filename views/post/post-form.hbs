<div id="form">
  <h2>Write your post</h2>
  <form action="/create-post" method="POST"  enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Title of Post" />

    <label for="content">What would you like to post?</label>
    <input type="text" id="content" name="content" placeholder="Your Post" />

    <label for="input-picture">Picture</label>
    <input type="file" name="picture" id="input-picture">

    <button type="submit">Post</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>